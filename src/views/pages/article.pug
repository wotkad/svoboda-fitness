block basicSeo
  meta(content="Статья в блоге" name="description")
  meta(content="Статья в блоге" name="keywords")

block manifestBrowserconfigFiles
  link(href="../manifest.json" rel="manifest" crossorigin)
  meta(content="../browserconfig.xml" name="msapplication-config")

block content
  main
    .barba(data-barba="wrapper")
      .barba-container(data-barba="container" data-barba-namespace="article")
        .wrapper
          .headline
            +breadcrumbs([ { title: 'Блог', href: '/blog/' }, { title: 'Статья', href: '' } ])
            +subtitle('01.', 'Статья')
        .pusher
          include ../components/article